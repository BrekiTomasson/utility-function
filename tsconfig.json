{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist/",
    "sourceMap": false,
    "composite": true,
    "declaration": false,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}
